<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlightBase.MainPage">


    <StackLayout Orientation="Vertical" Spacing="25"  VerticalOptions="Start" Padding="30">
        <Label FontSize="20" FontAttributes="Bold">Speed</Label>
        <Slider x:Name="speedSlider" Minimum="0" Maximum="100" Value="0" />
        <Label FontSize="20" FontAttributes="Bold">Location</Label>
        <Label x:Name="LocationLabel" FontSize="15"></Label>
        <Label FontSize="20" FontAttributes="Bold">Altitude</Label>
        <Label x:Name="AltitudeLabel" FontSize="15"></Label>
        
    </StackLayout>


</ContentPage>