<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlightBase.SettingsPage">
    <ContentPage.Content>
        <StackLayout Padding="20,20,20,20" Orientation="Vertical" Spacing="25" VerticalOptions="Start">
            <Label FontSize="20" FontAttributes="Bold">COM port:</Label>
            <Picker x:Name="Picker"/>
            <StackLayout Orientation="Horizontal" VerticalOptions="Start">
                <Label FontSize="20" FontAttributes="Bold" >Some setting:</Label>
                <Switch />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>